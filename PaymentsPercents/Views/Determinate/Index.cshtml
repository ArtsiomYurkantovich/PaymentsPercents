@model PaymentsPercents.Model.DepositeModel

@{
    ViewData["Title"] = "Index";
}

<div style="margin-top: 10%">
<h1>Calculator determinate percent </h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Payments">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvestmentTerm" class="control-label"></label>
                <input asp-for="InvestmentTerm" type="number" class="form-control" placeholder="Number of months" required max="480" />
                <span asp-validation-for="InvestmentTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestRate" class="control-label"></label>
                <input asp-for="InterestRate" type="number" class="form-control" placeholder="%" required />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvestmentAmount" class="control-label"></label>
                <input asp-for="InvestmentAmount" type="number" class="form-control" placeholder="$" required max="1.7976931348623157E+308" />
                <span asp-validation-for="InvestmentAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
</div>

